pipeline {
    agent any

    // Parameters for environment selection
    parameters {
        choice(
            name: 'ENV',
            choices: ['dev', 'qa', 'prod'],
            description: 'Select environment for deployment'
        )
    }

    environment {
        // Docker image name
        DOCKER_IMAGE = "ubaidullah334/my-app"
        // Jenkins DockerHub credentials ID
        REGISTRY_CREDENTIALS = 'dockerhub-creds'
        // Node environment variable based on selected ENV
        NODE_ENV = "${params.ENV}"
    }

    stages {

        stage('Checkout') {
            steps {
                // Checkout code from GitHub using Personal Access Token
                git branch: 'main',
                    url: 'https://github.com/ubaid-syed016/my-app-ci-cd.git',
                    credentialsId: 'github-pat'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('app') {
                    sh 'npm install' // Install Node.js dependencies
                }
            }
        }

        stage('Unit Tests') {
            steps {
                dir('app') {
                    sh 'npx jest ../tests/unit --passWithNoTests' // Run unit tests
                }
            }
        }

        stage('Lint') {
            steps {
                dir('app') {
                    sh 'npm run lint || echo "Lint warnings detected"' // Lint the code
                }
            }
        }

        stage('Docker Login') {
            steps {
                withCredentials([
                    usernamePassword(
                        credentialsId: 'dockerhub-creds',
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DOCKER_PASS'
                    )
                ]) {
                    sh 'echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin' // Login to DockerHub
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    def imageTag = "v${env.BUILD_NUMBER}" // Image tag using build number
                    docker.build(
                        "${DOCKER_IMAGE}:${imageTag}", 
                        "-f docker/Dockerfile ." // Build Docker image from Dockerfile
                    )
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry(
                        'https://index.docker.io/v1/',
                        REGISTRY_CREDENTIALS
                    ) {
                        def imageTag = "v${env.BUILD_NUMBER}"
                        docker.image("${DOCKER_IMAGE}:${imageTag}").push() // Push image to DockerHub
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Deployment part commented for explanation

                    /*
                    // Path to environment-specific .env file
                    def envFile = "config/${params.ENV}.env"
                    // Docker image tag based on Jenkins build number
                    def imageTag = "v${env.BUILD_NUMBER}"

                    // Load PORT from env file or use default 3000 if not set
                    def port = sh(
                        script: "grep PORT ${envFile} | cut -d '=' -f2",
                        returnStdout: true
                    ).trim()
                    if (!port) {
                        port = "3000" // default port if not defined in env file
                    }

                    // Deployment commands
                    sh """
                        # Stop any running container for this environment, ignore errors if not exists
                        docker stop my-app-${params.ENV} || true

                        # Remove old container, ignore errors if not exists
                        docker rm my-app-${params.ENV} || true

                        # Run the new container with:
                        # - name based on environment (my-app-dev / my-app-qa / my-app-prod)
                        # - environment variables from env file
                        # - port mapping dynamically loaded from env file
                        docker run -d \
                          --name my-app-${params.ENV} \
                          --env-file ${envFile} \
                          -p ${port}:${port} \
                          ${DOCKER_IMAGE}:${imageTag}
                    """
                    */
                }
            }
        }

        stage('Integration Tests') {
            steps {
                dir('app') {
                    sh 'npx jest ../tests/integration --passWithNoTests' // Run integration tests
                }
            }
        }

        stage('Approval for QA/Prod') {
            when {
                expression { params.ENV != 'dev' }
            }
            steps {
                input message: "Approve deployment to ${params.ENV}?" // Manual approval for QA/prod
            }
        }
    }

    post {
        success {
            echo "Pipeline successful for ${params.ENV}"
        }

        failure {
            echo "Pipeline failed, performing rollback..."
            sh """
                docker stop my-app-${params.ENV} || true
                docker rm my-app-${params.ENV} || true
                docker container prune -f
            """
        }
    }
}
