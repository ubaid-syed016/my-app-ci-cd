pipeline {
    agent any

    parameters {
        choice(
            name: 'ENV',
            choices: ['dev', 'qa', 'prod'],
            description: 'Select environment for deployment'
        )
    }

    environment {
        DOCKER_IMAGE = "ubaidullah334/my-app"
        REGISTRY_CREDENTIALS = 'dockerhub-creds'
        NODE_ENV = "${params.ENV}"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/ubaid-syed016/my-app-ci-cd.git',
                    credentialsId: 'github-pat'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('app') {
                    sh 'npm install'
                }
            }
        }

        stage('Unit Tests') {
            steps {
                dir('app') {
                    sh 'npx jest ../tests/unit --passWithNoTests'
                }
            }
        }

        stage('Lint') {
            steps {
                dir('app') {
                    // Don't fail pipeline on lint warnings
                    sh 'npm run lint || echo "Lint warnings detected"'
                }
            }
        }

        stage('Docker Login') {
            steps {
                withCredentials([
                    usernamePassword(
                        credentialsId: 'dockerhub-creds',
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DOCKER_PASS'
                    )
                ]) {
                    sh 'echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    def imageTag = "v${env.BUILD_NUMBER}"
                    docker.build("${DOCKER_IMAGE}:${imageTag}", "-f docker/Dockerfile .")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', REGISTRY_CREDENTIALS) {
                        def imageTag = "v${env.BUILD_NUMBER}"
                        docker.image("${DOCKER_IMAGE}:${imageTag}").push()
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    def envFile = "config/${params.ENV}.env"
                    def imageTag = "v${env.BUILD_NUMBER}"

                    // Load PORT from env file or use default 3000
                    def port = sh(
                        script: "grep PORT ${envFile} | cut -d '=' -f2",
                        returnStdout: true
                    ).trim()
                    if (!port) {
                        port = "3000"
                    }

                    sh """
                        docker stop my-app-${params.ENV} || true
                        docker rm my-app-${params.ENV} || true

                        docker run -d \
                          --name my-app-${params.ENV} \
                          --env-file ${envFile} \
                          -p ${port}:${port} \
                          ${DOCKER_IMAGE}:${imageTag}
                    """
                }
            }
        }

        stage('Integration Tests') {
            steps {
                dir('app') {
                    sh 'npx jest ../tests/integration --passWithNoTests'
                }
            }
        }

        stage('Approval for QA/Prod') {
            when {
                expression { params.ENV != 'dev' }
            }
            steps {
                input message: "Approve deployment to ${params.ENV}?"
            }
        }
    }

    post {
        success {
            echo "Pipeline successful for ${params.ENV}"
        }

        failure {
            echo "Pipeline failed, performing rollback..."
            sh """
                docker stop my-app-${params.ENV} || true
                docker rm my-app-${params.ENV} || true
                docker container prune -f
            """
        }
    }
}
