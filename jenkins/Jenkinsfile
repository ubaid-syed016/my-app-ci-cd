pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "mydockerhubuser/my-app"
        REGISTRY_CREDENTIALS = 'dockerhub-creds' // Add DockerHub credentials in Jenkins
    }

    parameters {
        choice(name: 'ENV', choices: ['dev', 'qa', 'prod'], description: 'Select environment for deployment')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/<username>/my-app-ci-cd.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Unit Tests') {
            steps {
                sh 'npm test'
            }
        }

        stage('Lint') {
            steps {
                sh 'npm run lint'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    def imageTag = "v${env.BUILD_NUMBER}"
                    docker.build("${DOCKER_IMAGE}:${imageTag}")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', "${REGISTRY_CREDENTIALS}") {
                        def imageTag = "v${env.BUILD_NUMBER}"
                        docker.image("${DOCKER_IMAGE}:${imageTag}").push()
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    def envFile = "config/${params.ENV}.env"
                    def imageTag = "v${env.BUILD_NUMBER}"
                    sh """
                        docker run --env-file ${envFile} -d -p \${PORT}:\${PORT} ${DOCKER_IMAGE}:${imageTag}
                    """
                }
            }
        }

        stage('Integration Tests') {
            steps {
                sh 'npm run integration-test'
            }
        }

        stage('Approval for QA/Prod') {
            when { expression { params.ENV != 'dev' } }
            steps {
                input message: "Approve deployment to ${params.ENV}?"
            }
        }
    }

    post {
        success {
            echo "Pipeline successful for ${params.ENV}"
        }
        failure {
            echo "Pipeline failed, performing rollback..."
            sh 'docker container prune -f'
        }
    }
}

