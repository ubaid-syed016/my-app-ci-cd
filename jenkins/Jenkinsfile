pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "ubaidullah334/my-app"
        REGISTRY_CREDENTIALS = 'dockerhub-creds'   // DockerHub credentials in Jenkins
        NODE_ENV = "${params.ENV}"                 // Node environment variable
    }

    parameters {
        choice(name: 'ENV', choices: ['dev', 'qa', 'prod'], description: 'Select environment for deployment')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/ubaid-syed016/my-app-ci-cd.git',
                    credentialsId: 'github-pat'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('app') {
                    sh 'npm install'
                }
            }
        }

        stage('Unit Tests') {
            steps {
                dir('app') {
                    // Tell Jest to look into ../tests/unit
                    sh 'npx jest ../tests/unit --passWithNoTests'
                }
            }
        }

        stage('Lint') {
            steps {
                dir('app') {
                    sh 'npm run lint || echo "Lint warnings detected"'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    def imageTag = "v${env.BUILD_NUMBER}"
                    // Build Docker image from docker/Dockerfile
                    docker.build("${DOCKER_IMAGE}:${imageTag}", "-f docker/Dockerfile .")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', "${REGISTRY_CREDENTIALS}") {
                        def imageTag = "v${env.BUILD_NUMBER}"
                        docker.image("${DOCKER_IMAGE}:${imageTag}").push()
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    def envFile = "config/${params.ENV}.env"
                    def imageTag = "v${env.BUILD_NUMBER}"

                    sh """
                        # Stop old container if exists
                        docker stop my-app-${params.ENV} || true
                        docker rm my-app-${params.ENV} || true

                        # Run new container
                        docker run -d --name my-app-${params.ENV} --env-file ${envFile} -p \${PORT}:\${PORT} ${DOCKER_IMAGE}:${imageTag}
                    """
                }
            }
        }

        stage('Integration Tests') {
            steps {
                dir('app') {
                    // Tell Jest to look into ../tests/integration
                    sh 'npx jest ../tests/integration --passWithNoTests'
                }
            }
        }

        stage('Approval for QA/Prod') {
            when { expression { params.ENV != 'dev' } }
            steps {
                input message: "Approve deployment to ${params.ENV}?"
            }
        }
    }

    post {
        success {
            echo "Pipeline successful for ${params.ENV}"
        }
        failure {
            echo "Pipeline failed, performing rollback..."
            sh """
                docker stop my-app-${params.ENV} || true
                docker rm my-app-${params.ENV} || true
                docker container prune -f
            """
        }
    }
}
